pipeline {
    agent any
    stages {
        stage('Build and run docker image') {
            steps {
                sh '''
                    docker stop websitestaging || true
                    docker rm websitestaging || true

                    docker pull realsahilthakur/newwebsite:latest

                    docker run --name websitestaging -d -p 8082:80 realsahilthakur/newwebsite:latest
                '''
            }
        }
        stage('Testing') {
            steps {
                sh '''
                    # Test the running container
                    curl -I http://192.168.58.130:8082
                '''
            }
        }
stage('Checkout Code') {
    steps {
        git 'https://github.com/realsahilthakur/newwebsite.git'
    }
}
stage('UI Testing') {
            steps {
                // Ensure Selenium Docker container is running
                sh 'docker ps | grep selenium_chrome || docker run -d -p 4444:4444 --name selenium_chrome selenium/standalone-chrome'
                sh 'pip3 install selenium --user'
                sh 'curl -o ui_test.py https://raw.githubusercontent.com/realsahilthakur/newwebsite/refs/heads/staging/ui_testing.py'
                // Run the UI test script (assumes ui_test.py is already in workspace)
                sh 'python3 ui_test.py'
            }
        }
    }
}
